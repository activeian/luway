{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Flutter Build",
			"type": "shell",
			"command": "flutter",
			"args": [
				"build",
				"apk",
				"--debug"
			],
			"group": "build",
			"problemMatcher": [
				"$flutter"
			]
		},
		{
			"label": "shell: Start Notification Server",
			"type": "shell",
			"command": "node",
			"args": [
				"server/server.js"
			],
			"group": "build",
			"isBackground": true
		},
		{
			"label": "Web: Development Server",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev"
			],
			"options": {
				"cwd": "${workspaceFolder}/web"
			},
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			}
		},
		{
			"label": "Web: Build Production",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"build"
			],
			"options": {
				"cwd": "${workspaceFolder}/web"
			},
			"group": "build",
			"problemMatcher": []
		}
	]
}